        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button>Przycisk</Button>
        <Button>Przycisk</Button>
        <Button>Przycisk</Button>

        <UniformGrid>
            <Button>Przycisk</Button>
            <Button>Przycisk</Button>
            <Button>Przycisk</Button>
            <Button>Przycisk</Button>
        </UniformGrid>

        <WrapPanel>
            <Button>Przycisk</Button>
            <Button>Przycisk</Button>
            <Button>Przycisk</Button>
        </WrapPanel>

        <DockPanel>
            <Button DockPanel.Dock="Top">Przycisk1</Button>
            <Button DockPanel.Dock="Left">Przycisk2</Button>
            <Button DockPanel.Dock="Top">Przycisk3</Button>
            <Button DockPanel.Dock="Left">Przycisk4</Button>
            <Button>Przycisk5</Button>
